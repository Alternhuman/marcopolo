[Unit]
Description=A simple service discovery protocol advertiser

[Service]

ExecStart=/usr/bin/python3 /opt/marcopolo/polo/polod.py &> /dev/null
ExecStop=/usr/bin/python3 /opt/marcopolo/daemon/polostop.py &> /dev/null

#ExecReload # Send signal
Type=simple
User=root
Group=root
PIDFile=/var/run/marcopolo/polod.pid

[Install]
WantedBy=multi-user.target